<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragments.ViewOffersFragment">

    <LinearLayout
        android:id="@+id/headerOffer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageButton
            android:id="@+id/viewOfferBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_arrow_back"
            android:contentDescription="@string/backBtn"
            android:backgroundTint="@color/white"/>

        <TextView
            android:id="@+id/viewOfferText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16sp"
            android:text="@string/viewOffers"
            android:textColor="@color/red"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textAlignment="textStart"/>
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/viewOffers"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/headerOffer"/>


</RelativeLayout>